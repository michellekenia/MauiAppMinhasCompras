<ContentPage
    x:Class="MauiAppMinhasCompras.Views.NovoProduto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Novo Produto">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="txtDescricao" Placeholder="Descrição" />
        <Entry x:Name="txtQuantidade" Placeholder="Quantidade" Keyboard="Numeric" />
        <Entry x:Name="txtPreco" Placeholder="Preço" Keyboard="Numeric" />
        <Label Text="Categoria" Style="{StaticResource labelStyle}" />
        <Picker x:Name="pckCategoria" Title="Selecione a Categoria">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Alimentos</x:String>
                    <x:String>Higiene</x:String>
                    <x:String>Limpeza</x:String>
                    <x:String>Eletrônicos</x:String>
                    <x:String>Outros</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Salvar" Clicked="OnSalvar" />
    </VerticalStackLayout>
</ContentPage>